@model SkjaTextar.Models.Request

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Request</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Media.Category, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Media.Category, ViewBag.Categories as List<SelectListItem>)
                @Html.ValidationMessageFor(model => model.Media.Category)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Media.Category.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Media.Category.Name, ViewBag.UnderCategories as SelectList)
                @Html.ValidationMessageFor(model => model.Media.Category.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Media.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Media.Title)
                @Html.ValidationMessageFor(model => model.Media.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Media.ReleaseYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Media.ReleaseYear)
                @Html.ValidationMessageFor(model => model.Media.ReleaseYear)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Language, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Language)
                @Html.ValidationMessageFor(model => model.Language)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
