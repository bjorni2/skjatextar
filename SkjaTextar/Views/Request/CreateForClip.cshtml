                <p>@Model.ReleaseYear</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Link, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>@Model.Link</p>
            </div>
        </div>

