@model SkjaTextar.ViewModels.ShowRequestViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Beiðni</h2>


@using (Html.BeginForm("CreateShow", "Request"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <p>@ViewBag.MediaType</p>

        <div class="form-group">
            @Html.LabelFor(model => model.Show.CategoryID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Show.CategoryID, ViewBag.SubCategories as SelectList)
                @Html.ValidationMessageFor(model => model.Show.CategoryID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Show.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Show.Title)
                @Html.ValidationMessageFor(model => model.Show.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Show.Series, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Show.Series)
                @Html.ValidationMessageFor(model => model.Show.Series)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Show.Episode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Show.Episode)
                @Html.ValidationMessageFor(model => model.Show.Episode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Show.ReleaseYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Show.ReleaseYear)
                @Html.ValidationMessageFor(model => model.Show.ReleaseYear)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Show.Link, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Show.Link)
                @Html.ValidationMessageFor(model => model.Show.Link)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Request.LanguageID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Request.LanguageID, ViewBag.Languages as SelectList)
                @Html.ValidationMessageFor(model => model.Request.LanguageID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
