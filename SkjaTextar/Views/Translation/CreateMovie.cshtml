@model SkjaTextar.ViewModels.MovieTranslationViewModel

@{
    ViewBag.Title = "Ný þýðing";
}

<h2 class="col-md-offset-1">Ný þýðing - Kvikmynd</h2>

<div>
    @if (ViewBag.Errormsg != null)
    {
        <h3 class="field-validation-error">@ViewBag.Errormsg</h3>
    }
</div>
@using (Html.BeginForm("CreateMovie", "Translation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
    
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.CategoryID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Movie.CategoryID, ViewBag.CategoryID as SelectList)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Title)
                @Html.ValidationMessageFor(model => model.Movie.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.ReleaseYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.ReleaseYear)
                @Html.ValidationMessageFor(model => model.Movie.ReleaseYear)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Link, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Link)
                @Html.ValidationMessageFor(model => model.Movie.Link)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LanguageID", String.Empty)
                @Html.ValidationMessageFor(model => model.LanguageID)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="file">Skráarheiti:</label>
            <div class="col-md-10">
                <input type="file" name="file" id="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stofna þýðingu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
