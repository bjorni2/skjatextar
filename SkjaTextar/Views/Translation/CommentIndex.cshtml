@model SkjaTextar.ViewModels.CommentViewModel

@{
    ViewBag.Title = "Athugasemd um Þýðingu";
}

<h2 class="col-md-offset-2">Umræður</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="col-md-offset-2">@Html.ActionLink(Model.Translation.Media.Title as string + " - " +  Model.Translation.Language.Name as string,
        "Index" , "Translation" , new { ID = Model.Translation.ID }, null)</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Translation.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Comment.CommentText, "Athugasemd", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comment.CommentText, new { @rows = "12", @cols = "50"})
                @Html.ValidationMessageFor(model => model.Comment.CommentText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Senda inn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@foreach(var comment in Model.Comments)
{
    <div class="row">
        <div class="col-md-1 col-md-offset-2">
            @if(String.IsNullOrEmpty(comment.AvatarUrl))
            {
                <img src="~/Content/avatar.png" alt="@comment.User.UserName avatar" />
            }
            else
            {
                <img src="@comment.AvatarUrl" alt="@comment.User.UserName avatar" />
            }           
            <p>
                @comment.User.UserName
            </p>
            <p><span>Stig: </span>@comment.User.Score</p>
        </div>
        <div class="col-md-6">
            <p> @comment.CommentText</p>
        </div>
    </div>
    <hr />
}