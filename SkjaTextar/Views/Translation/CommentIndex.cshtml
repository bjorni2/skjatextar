@model SkjaTextar.ViewModels.CommentViewModel

@{
    ViewBag.Title = "CommentIndex";
}

<h2>Umræður</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Translation.Media.Title - @Model.Translation.Language.Name</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Translation.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Comment.CommentText, "Athugasemd", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comment.CommentText, new { @rows = "12", @cols = "50"})
                @Html.ValidationMessageFor(model => model.Comment.CommentText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Senda inn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@foreach(var comment in Model.Comments)
{
    <div class="row">
        <div class="col-md-1 col-md-offset-2">
            <img src="@Url.Content("~/content/avatar.png")" alt="@comment.User.UserName avatar" />
            <p>
                @comment.User.UserName
            </p>
            <p><span>Stig: </span>@comment.User.Score</p>
        </div>
        <div class="col-md-6">
            <p> @comment.CommentText</p>
        </div>
    </div>
    <hr />
}