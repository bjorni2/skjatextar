@model SkjaTextar.ViewModels.ReportViewModel

@{
    ViewBag.Title = "Tilkynning";
}

<h2>Tilkynna slæma þýðingu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Translation.Media.Title - @Model.Translation.Language.Name</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.Hidden("Translation.ID", Model.Translation.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Report.ReportText, "Skilaboð", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Report.ReportText, new { @rows = "12", @cols = "50" })
                @Html.ValidationMessageFor(model => model.Report.ReportText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Senda inn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

