@model SkjaTextar.Models.Report
@{
    ViewBag.Title = "Tilkynning";
}

<h2>Tilkynna slæma þýðingu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Translation.Media.Title - @Model.Translation.Language.Name</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.Hidden("TranslationID", Model.TranslationID)

        <div class="form-group">
            @Html.LabelFor(model => model.ReportText, "Skilaboð", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ReportText, new { @rows = "12", @cols = "50" })
                @Html.ValidationMessageFor(model => model.ReportText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Senda inn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Aftur á þýðingu", "Index", new { id = ViewBag.TranslationID })
</div>


