@model IEnumerable<SkjaTextar.Models.Movie>
@{
    ViewBag.Title = "Kvikmyndir - " + @ViewBag.Category;
}

<h2 class="col-md-offset-1">Kvikmyndir - @ViewBag.Category</h2>
<hr />
@foreach (var item in Model)
{
    <p class="biggertext col-md-offset-1">@Html.ActionLink(item.Title + " - " + item.ReleaseYear, "Index", "Media", new { id = item.ID }, null)</p>
}